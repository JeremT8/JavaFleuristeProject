$(function() {
	getBouquets();
});

function getBouquets() {
	$("#errorBouquet").css("display", "none");
	$.get("http://localhost:8080/tp-fleuriste/rs/bouquets", afficherBouquets);
}

function afficherBouquets(Bouquets) {
	var data = "";
	Bouquets.forEach(function(b) {
		var content = "";
		content += "<div class='card' style='width: 46%;'>";
		content += " <img class='card-img-top ' src=" + b.image + " >";
		content += "<div class='card-body'>";
		content += "<h5 class='card-title'>" + b.nom + "</h5>";
		content += " <p class='card-text'>" + b.description + "</p>";
		content += " <p class='card-text'>"+ b.tarif + "â‚¬" + "</p>";
		content += " </div>";
		content += " </div>";

		data += content;
	})

	$("#content").html(data);
}









